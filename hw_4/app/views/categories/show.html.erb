<%= link_to 'Back', 'javascript:history.back()' %>
<h1><%= @category.name %><h1>

<h3>(<%= @category.image %>)</h3>


    <% @category.products.each do |product| %>
    <h2>Products</h2>

      <b>
        <h2> <%= link_to product.name, store_category_product_path(@store, @category, product)  %></h2>
      </b>

      <p>
        <h3><%= product.image %></h3>
      </p>
      <% if product.avatar.url %>
      <%= image_tag product.avatar.url(:thumb) %>
      <% else %>

      <% end %>

  <p>--------------------------------------------------</p>
  <% end %>



  <h2>New Product:</h2>
  <%= form_with(model: [@store, @category, @category.products.build ], local: true, html: {multipart: true}) do |f| %>
    <p>
      <%= f.label "Name(Product)" %><br>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label "Image(Product)" %><br>
      <%= f.text_area :image %>
    </p>
    <div class="form-group">
      <%= f.file_field :avatar %>
    </div>


    <p>
      <%= f.submit 'Save'%>

    </p>

  <% end %>
